// суть
// функция допустим принимает что-то и это что-то возвращает
// можно использовать эни, но нельзя, у него много минусов
// насоздавать миллионы функций которые принимают разные типы и возрвращают разныек тоже
// сощдать отдельный тип в которм несколько типов возможноэ
// ЛУЧШЕ ВСЕГО ПРОБЛЕМУ РЕШАЮТ ДЖЕНЕРИКИ

{
 //<T> значит что при вызове функции мы укажем тип в таких скобках <> // синтаксис таков что Обязательно нужна бква Т (алиас)
    const returnValueByGeneric = function <T>(arg: T): T {
        return arg;
    };

    const text: string = returnValueByGeneric<string>('str'); // изнутри так скзать указываю то что функция примет
    const n: number = returnValueByGeneric<number>(1);

    console.log(text);
    console.log(n);
}
// если не указыавть <string> // тайпскрипт сам поппытается понят, и в этом случсе поойсмет т к "str" - явная строка

// по другому запись фунции // не стрелкой
{
    const getArgument = function <T>(arg: T): T {
        return arg;
    };

    const readArgument: {<T>(arg: T): T} = getArgument;

    readArgument(1)
}
