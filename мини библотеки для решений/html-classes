yarn add html-classes
import classes from "html-classes"
classes('test1', 'test2')
// 'test1 test2'
classes({test1: true, test2: 1, test3: NaN})
// 'test1 test2'

export const Button = ({ children, outline }) => {
  return (
    <button className={classes("button", {
      "button--outline": outline
    })} >
      {children}
    </button>
  )
}
